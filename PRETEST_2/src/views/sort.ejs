<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>danh sách laptop</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <div class="mt-2">
            <a href="/create" class="btn btn-success">thêm laptop mới</a>
            <a href="/laptop" class="btn btn-warning">back</a>
            <form action="/search" method="get">
                <div class="d-flex mt-2">
                    <input type="number" name="giabatdau" id="giabatdau" class="form-control mx-2"
                        placeholder="nhập giá bắt đầu">
                    <input type="number" name="giaketthuc" id="giaketthuc" class="form-control mx-2"
                        placeholder="nhập giá kết thúc">
                    <button type="submit" class="btn btn-primary mx-2">Search</button>
                </div>
            </form>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th><a href="/laptop" name="sort" class="btn btn-warning">Name</a></th>
                        <th>Price</th>
                        <th>Image</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                    <% laptops.forEach(item=> { %>
                        <tr>
                            <td>
                                <%= item.name %>
                            </td>
                            <td>
                                <%= item.price %>
                            </td>
                            <td>
                                <img src="<%= item.image %>" alt="image" width="100px" class="img-thumbnail">
                            </td>
                            <td>
                                <a href="/update/<%= item._id%>" class="btn btn-success">update</a>
                                <a href="/delete/<%= item._id%>" class="btn btn-danger">delete</a>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>