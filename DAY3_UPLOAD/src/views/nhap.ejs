    <style>
        /* Tùy chỉnh CSS cho navigation bar */
        .navbar {
            background-color: #333;
        }

        .navbar-brand, .navbar-nav .nav-link {
            color: #fff;
        }

        .navbar-brand:hover, .navbar-nav .nav-link:hover {
            color: #fff;
        }
    </style>
</head>
