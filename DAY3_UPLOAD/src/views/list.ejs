<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
</head>

<body>
    <div class="container">
        <h1>product list</h1>
        <% if (message) { %>
            <div class="alert alert-success alert-dismissable">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <strong>Success!</strong>
                <%= message %>
            </div>
            <% } %>
                <div class="d-flex">
                    <a href="/product/create" class="btn btn-info">Create</a>
                    <a href="/product/nhap" class="btn btn-info">nhap</a>
                </div>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>image</th>
                            <th>action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% products.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= item.id %>
                                </td>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <%= item.price %>
                                </td>
                                <td>
                                    <img src="<%= item.image %>" alt="image" width="100px" class="img-thumbnail">
                                </td>
                                <td>
                                    <a href="/product/edit/<%= item.id%>" class="btn btn-success">update</a>
                                    <a href="/product/delete/<%= item.id%>" class="btn btn-warning">delete</a>
                                </td>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
    </div>
</body>

</html>